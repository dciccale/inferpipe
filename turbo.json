{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["APP_ORIGIN", "CLERK_SECRET_KEY"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["APP_ORIGIN", "CLERK_SECRET_KEY"]
    },
    "lint": {},
    "clean": {
      "cache": false
    }
  }
}
